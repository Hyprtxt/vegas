block body
	-page_script = 'js/lobby.js'
	.container
		.row
			.col-sm-12
				h1=title
				p=description
		.row#lobby
			.col-sm-12
				p name: 
					span.name
				p mood: 
					span.mood
				p age: 
					span.age
				p location: 
					span.location
				p money: $
					span.cash 0
				P inventory: 
					span.inventory
